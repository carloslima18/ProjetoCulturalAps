<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.carlos.projetocultural.actViewPub"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/activity_act_view_pub">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="13dp">



        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tituloPub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold|italic" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgViewPub"
                    android:layout_width="250dp"
                    android:layout_height="300dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:adjustViewBounds="true"
                    android:background="@color/cast_expanded_controller_progress_text_color"
                    android:padding="1dp" />

                <ImageView
                    android:id="@+id/nextFtPub"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="130dp"
                    android:src="@drawable/quantum_ic_skip_next_grey600_36" />

            </LinearLayout>


            <TextView
                android:id="@+id/textvInfoPub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                android:textStyle="bold|italic" />


            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/enderecoPub"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="textStart"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapViewPub"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />


             </LinearLayout>


            <LinearLayout
                android:id="@+id/avl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textviewAvl"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="20dp"
                    android:text="Avaliações: "
                    android:textSize="18sp"
                    android:textStyle="italic"
                    tools:text="Avaliação: 3.7" />

                <Button
                    android:id="@+id/buttonAvl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Avaliar Publicação" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</RelativeLayout>
