<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.carlos.projetocultural.PesquisadorhomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="100dp">
        <Button
            android:id="@+id/buttonaddpubpesq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add pub" />

        <Button
            android:id="@+id/buttonviewpubpesq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pub. pesq" />

        <Button
            android:id="@+id/buttonviewmappubpesq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="view map pesq" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
