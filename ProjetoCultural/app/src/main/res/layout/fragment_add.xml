<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AddFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="13dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="ADICIONAR PUBLICAÇÃO"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                android:typeface="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.441"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.017" />

            <EditText
                android:id="@+id/editTextnome"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:hint="nome do local"
                />

            <EditText
                android:id="@+id/editText3redesocial"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:hint="rede social"
                />

            <EditText
                android:id="@+id/editText4end"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:hint="endereço"
                />

            <EditText
                android:id="@+id/editText5contato"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:hint="contato"
                />

            <EditText
                android:id="@+id/editText6atvEx"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:hint="atividade exercida"
                />

            <!--EditText
                android:id="@+id/editText7categoria"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:hint="categoria"
                android:visibility="invisible"
                /-->

            <TextView
                android:id="@+id/textview7categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="categoria"
                />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="300dp"
                android:layout_height="60dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="95dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="40dp"
                    android:background="@android:drawable/ic_menu_upload" />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="95dp"
                    android:layout_height="80dp"
                    android:background="@android:drawable/ic_menu_upload"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">


            <ImageView
                android:id="@+id/img3"
                android:layout_width="95dp"
                android:layout_marginRight="40dp"
                android:layout_height="80dp"
                android:background="@android:drawable/ic_menu_upload"/>

            <ImageView
                android:id="@+id/img4"
                android:layout_width="95dp"
                android:layout_height="80dp"
                android:background="@android:drawable/ic_menu_upload"/>


        </LinearLayout>


            <com.google.android.gms.maps.MapView
                android:id="@+id/figMapAdd"
                android:layout_width="match_parent"
                android:layout_height="220sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/buttonAddMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alterar Localização"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toEndOf="@+id/buttonFoto" />

            <Button
                android:id="@+id/buttonSalvar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Salvar Publicação"
                 />


        </LinearLayout>

    </ScrollView>




</RelativeLayout>